<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#ffffff"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cuponcopylogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logocp1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/couponTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:textColor="@color/black"
            android:text="Free rides new and old users"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/cuponcopylogo"
            android:layout_toRightOf="@+id/cuponcopylogo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right">

        <TextView
            android:id="@+id/rateustxt"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="RATE US"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/copyCodetxt"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_toEndOf="@+id/rateustxt"
            android:layout_toRightOf="@+id/rateustxt"
            android:text="COPY"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>




</LinearLayout>